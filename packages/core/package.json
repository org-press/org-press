{
  "name": "org-press",
  "version": "0.9.7",
  "description": "Static site generator for org-mode files - like VitePress for org",
  "license": "GPL-2.0",
  "author": "Mauro Mandracchia",
  "homepage": "https://orgp.dev",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./dts": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/node/vite-plugin-org-press.d.ts",
      "import": "./dist/node/vite-plugin-org-press.js"
    },
    "./client/hydrate-runtime": {
      "import": "./src/client/hydrate-runtime.ts"
    },
    "./package.json": "./package.json",
    "./styles.css": "./src/layouts/default/index.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "orgp": "./dist/bin/orgp.js"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ci": "vitest --run",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "vite": "^7.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": false
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "typescript": ">=5.0.0",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "happy-dom": "^20.3.7",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "p-map": "^7.0.4",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "unified": "^11.0.5",
    "uniorg": "^1.3.0",
    "uniorg-parse": "^3.2.0",
    "uniorg-rehype": "^2.2.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/node": "^22.13.4",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/unist": "^3.0.3",
    "esbuild": "^0.27.2",
    "memfs": "^4.52.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.0.0",
    "vitest": "^3.1.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/org-press/org-press.git"
  },
  "bugs": {
    "url": "https://github.com/org-press/org-press/issues"
  },
  "keywords": [
    "org-mode",
    "static-site-generator",
    "vite",
    "literate-programming"
  ]
}
